from Standard.Base import all

import Standard.Base.Runtime.Ref
import Standard.Test

spec = Test.group "Refs" <|
    Test.specify "should be able to store and retrieve value in references" <|
        r = Ref.new 'foo'
        r . put 'bar'
        v = r.get
        v.should_equal 'bar'

main = Test.Suite.run_main spec
